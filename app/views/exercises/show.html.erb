<div class="mt-3">
  <h1><%= @exercise.title %></h1>
</div>

<div class="form-group">
  <%= form_tag answers_checks_path do %>
    <%= text_area_tag :answer, '', class: 'form-control', rows: 5 %>
    <%= hidden_field_tag :exercise_id, params[:id] %>
    <br>
    <%= submit_tag '解答する', class: 'btn btn-primary' %>
  <% end %>
</div>

<div class="card">
  <div class="card-header">
    ヒント
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= raw(CodeRay.scan(@exercise.sql, :sql).div) %></p>
    </blockquote>
  </div>
</div>